<div class="navbar navbar-inverse navbar-fixed-top">
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to "Capricciosa", root_path, class: "navbar-brand" %>
    </div>
    <div class="navbar-collapse collapse">
      <ul class="nav navbar-nav">
        <li><%= link_to "About", home_about_path %></li>
      </ul>

      <% if !current_user %>
        <div class="navbar-form navbar-right">
          <%= form_for(User.new, as: :user, url: session_path(:user)) do |f| %>
            <div class="form-group">
              <%= f.email_field :email, :autofocus => true, class: "form-control" %>
            </div>
            <div class="form-group">
              <%= f.password_field :password, class: "form-control" %>
            </div>
            <%= f.submit "Sign in", class: "btn btn-success" %>
        </div>
        <% end %>
      <% else %>
        <div class="navbar-right">
          <p class="navbar-text ">You are signed as <%= current_user.email %></p>
          <%= link_to "Sign_out", destroy_user_session_path, method: 'delete', class: "btn btn-success navbar-btn" %>
        </div>
      <% end %>
    </div><!--/.navbar-collapse -->
  </div>
</div>
